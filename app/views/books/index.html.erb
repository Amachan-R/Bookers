<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Bookers</title>
    <meta charset="UTF-8" />
  </head>
  <body>
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><span><%= book.title %></span></td>
            <td><span><%= book.body %></span></td>
            <td width="60"><a><%= link_to "Show", "/books/#{book.id}" %></a></td>
            <td width="60"><a><%= link_to "Edit", "/books/#{book.id}/edit" %></a></td>
            <td width="60"><a><%= link_to "Destroy", "/books/#{book.id}", method: :delete %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>

      <% if @book.errors.any? %>
        <div id="error_explanation"><h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <ul><li><%= message %></li></ul>
        <% end %>
        </div>
      <% end %>


      <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>

      <div></div>
      <%= f.submit 'Create Book' %>
      <% end %>
    </form>
  </body>
</html>